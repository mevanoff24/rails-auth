<h1>Sign Up</h1>

<%= form_for @user do |f| %>
  <% if @user.errors.any? %>
    <% @user.errors.full_messages.each do |message| %>
      <%= message %>
    <% end %>
  <% end %>

  <%= f.label :name %>
  <%= f.text_field :name %></br>

  <%= f.label :email %>
  <%= f.text_field :email %></br>

  <%= f.label :password %>
  <%= f.password_field :password %></br>

  <%= f.label :password_confirmation %>
  <%= f.password_field :password_confirmation %></br>

  <%= f.submit %>

<% end %>
